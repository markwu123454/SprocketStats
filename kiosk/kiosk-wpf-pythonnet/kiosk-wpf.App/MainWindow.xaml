<Window x:Class="kiosk_wpf.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:kiosk_wpf.App"
        xmlns:modernWpf="http://schemas.modernwpf.com/2019"
        Title="SprocketStats Analytics"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        Foreground="#E6E6E6"
        modernWpf:ThemeManager.RequestedTheme="Dark">

    <Window.Resources>
        <!-- Terminal accent -->
        <SolidColorBrush x:Key="TerminalGreen" Color="#00FF6F" />

        <!-- Optional accent button -->
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT PANE ================= -->

        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Console"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <!-- Log Output -->
            <Border Grid.Row="2"
                    Background="#0C0C0C"
                    CornerRadius="6"
                    Padding="6">
                <RichTextBox x:Name="LogOutput"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             FontFamily="Consolas"
                             FontSize="13"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled" />
            </Border>

            <!-- Command Entry -->
            <DockPanel Grid.Row="3" Margin="0,12,0,0">
                <TextBlock Text=">>>"
                           FontFamily="Consolas"
                           FontSize="16"
                           Foreground="{StaticResource TerminalGreen}"
                           VerticalAlignment="Center"
                           Margin="0,0,6,0" />

                <TextBox x:Name="CommandInput"
                         FontFamily="Consolas"
                         FontSize="14"
                         PreviewKeyDown="CommandInput_PreviewKeyDown" />
            </DockPanel>
        </Grid>

        <!-- ================= RIGHT PANE ================= -->

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ================= SETTINGS ================= -->

            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Settings"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <Border Grid.Row="1"
                        Background="#111"
                        CornerRadius="6"
                        Padding="12">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <app:SettingsView Margin="0,0,0,16" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ================= ACTIONS ================= -->

            <StackPanel Grid.Row="1">
                <TextBlock Text="Actions"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <Border Background="#111"
                        CornerRadius="6"
                        Padding="12">
                    <StackPanel HorizontalAlignment="Stretch">

                        <Button x:Name="UploadBtn"
                                Content="Download Data"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="Download_Click" />

                        <Button x:Name="RunBtn"
                                Content="Run Calculation"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="Run_Click" />

                        <Button x:Name="DownloadBtn"
                                Content="Upload Results"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="Upload_Click" />

                        <Button Content="Exit"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"
                                Foreground="#E81123"
                                Click="Exit_Click" />

                    </StackPanel>
                </Border>

            </StackPanel>

        </Grid>
    </Grid>
</Window>